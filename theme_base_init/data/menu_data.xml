<?xml version="1.0" encoding="utf-8" ?>
<odoo>
        <data noupdate="1">

            <!--Main menu-->
            <record id="theme_name_main_menu" model="website.menu">
                <field name="name">Main Menu</field>
                <field name="website_id" ref="theme_base_init.theme_name"/>
            </record>

            <!--Home Menu-->
            <record id="theme_name_menu_homepage" model="website.menu">
                <field name="name">Home</field>
                <field name="url">/</field>
                <field name="parent_id" ref="theme_name_main_menu"/>
                <field name="sequence" type="int">10</field>
                <field name="website_id" ref="base.main_company"/>
            </record>

            <!-- split between ir_ui_view & website_page record to keep external_id on ir_ui_view -->
            <record id="theme_name_homepage" model="ir.ui.view">
                <field name="name">Home</field>
                <field name="type">qweb</field>
                <field name="key">website.homepage</field>
                <field name="arch" type="xml">
                    <t name="Home" priority="29" t-name="theme_name_homepage">
                        <!--<t t-call="website.layout">-->
                            <!--<t t-set="pageName" t-value="'homepage'"/>-->
                            <!--<div id="wrap" class="oe_structure oe_empty"/>-->
                        <!--</t>-->
                        <t t-call="theme_base_init.theme_name_homepage_content"/>
                    </t>
                </field>
            </record>
            <record id="theme_name_homepage_page" model="website.page">
                <field name="url">/</field>
                <field name="view_id" ref="theme_name_homepage" />
            </record>

        </data>
</odoo>