<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <template id="theme_name_website_layout" inherit_id="website.layout">
        <xpath expr="//div[@id='wrapwrap']//div[hasclass('navbar')]" position="before">
            <div class="wp-contact-navbar">
                <div class="container contact-navbar">
                    <div class="row">
                        <div class="col-md-2">
                            <div class="header-phone">
                                <i class="fa fa-phone"/>
                                <a t-field="res_company.phone" t-att-href="'tel:%s' %res_company.phone"/>
                            </div>
                            <div class="contact-separator"/>
                        </div>
                        <div class="col-md-2">
                            <div class="header-email">
                                <i class="fa fa-envelope"/>
                                <a t-field="res_company.email" t-att-href="'mailto:%s' %res_company.email"/>
                            </div>
                        </div>
                        <div class="col-md-6"/>
                        <div class="col-md-2">
                            <!--
                                You can use one of two types of language selector
                            -->
                            <div class="header-language pull-right">
                                <t t-foreach="languages" t-as="lg">
                                    <a t-att-href="url_for(request.httprequest.path + '?' + keep_query(), lang=lg[0])"
                                       t-att-data-default-lang="(editable or translatable) and 'true' if website and lg[0] == website.default_lang_code else None"
                                       t-att-data-lang="lg[0]"
                                       class="js_change_lang"
                                       rel="nofollow">
                                        <img t-att-src="'/theme_base_init/static/img/flags/%s.png' % lg[0].split('_')[0]"
                                             t-att-title="lg[1].split('/').pop()"
                                             t-att-alt="lg[1].split('/').pop()"
                                             t-att-href="url_for(request.httprequest.path + '?' + keep_query(), lang=lg[0])"/>
                                    </a>
                                </t>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </xpath>
    </template>

    <template id="theme_name_portal_frontend_layout" name="Frontend Layout THEME NAME Template" inherit_id="portal.frontend_layout">
        <!--
            You can use one of two types of language selector
        -->
        <xpath expr="//ul[@id='top_menu']" position="inside">
            <t t-if="(request and request.is_frontend_multilang and len(languages) &gt; 1)">
                <li class="divider"/>
                <li class="dropdown language_menu">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        <img t-att-src="'/theme_base_init/static/img/flags/%s.png' % lang.split('_')[0]"/>
                        <span t-esc="lang.split('_')[0]"/>
                        <span class="caret"/>
                    </a>
                    <ul class="dropdown-menu" role="menu">
                        <t t-foreach="languages" t-as="lg">
                            <li t-if="lg[0] != lang">
                                <a t-att-href="url_for(request.httprequest.path + '?' + keep_query(), lang=lg[0])"
                                   t-att-data-default-lang="(editable or translatable) and 'true' if website and lg[0] == website.default_lang_code else None"
                                   t-att-data-lang="lg[0]"
                                   class="js_change_lang"
                                   rel="nofollow">
                                    <img t-att-src="'/theme_base_init/static/img/flags/%s.png' % lg[0].split('_')[0]"
                                         t-att-title="lg[1].split('/').pop()"
                                         t-att-alt="lg[1].split('/').pop()"
                                         t-att-href="url_for(request.httprequest.path + '?' + keep_query(), lang=lg[0])"/>
                                    <span t-esc="lg[0].split('_')[0]"/>
                                </a>
                            </li>
                        </t>
                    </ul>
                </li>
            </t>
        </xpath>
    </template>

</odoo>