<?xml version="1.0" encoding="utf-8" ?>
<odoo noupdate="1">

    <!-- ======================================= Page Open Your Shop ======================================= -->

    <!--Template Open Your Shop-->
    <template id="page_with_sections">
        <t t-call="website.layout">
            <div id="wrap">
                <div class="container"/>
            </div>
        </t>
    </template>

    <!--Page Open Your Shop-->
    <record id="id_page_with_sections" model="website.page">
        <field name="name">Open Your Shop</field>
        <field name="website_published">True</field>
        <field name="website_ids" eval="[(6, 0, [ref('website_base_multi_anz.theme_name')])]"/>
        <field name="url">/page/with_sections</field>
        <field name="view_id" ref="page_with_sections"/>
     </record>

    <!-- Open Shop Menu -->
    <record id="with_sections_menu" model="website.menu">
        <field name="name">Open Your Shop</field>
        <field name="url">/page/with_sections</field>
        <field name="page_id" ref="id_page_with_sections"/>
        <field name="parent_id" ref="theme_name_main_menu"/>
        <field name="sequence" type="int">20</field>
        <field name="website_id" ref="website_base_multi_anz.theme_name"/>
        <field name="website_published">True</field>
    </record>

    <!-- Open Shop Submenu -->
    <record id="with_sections_submenu_first_section" model="website.menu">
        <field name="name">First Section</field>
        <field name="url">/page/with_sections#first_section</field>
        <field name="parent_id" ref="with_sections_menu"/>
        <field name="sequence" type="int">10</field>
        <field name="website_id" ref="website_base_multi_anz.theme_name"/>
        <field name="website_published">True</field>
    </record>
    <record id="with_sections_submenu_first_section" model="website.menu">
        <field name="name">Second Section</field>
        <field name="url">/page/with_sections#second_section</field>
        <field name="parent_id" ref="with_sections_menu"/>
        <field name="sequence" type="int">20</field>
        <field name="website_id" ref="website_base_multi_anz.theme_name"/>
        <field name="website_published">True</field>
    </record>
    <record id="with_sections_submenu_first_section" model="website.menu">
        <field name="name">Third Section</field>
        <field name="url">/page/with_sections#third_section</field>
        <field name="parent_id" ref="with_sections_menu"/>
        <field name="sequence" type="int">30</field>
        <field name="website_id" ref="website_base_multi_anz.theme_name"/>
        <field name="website_published">True</field>
    </record>

    <!-- ======================================= Page Anzamar Brands ======================================= -->

    <!--Anzamar Brands Templates -->
    <template id="page_normal">
        <t t-call="website.layout">
            <div id="wrap">
                <div class="container"/>
            </div>
        </t>
    </template>

    <!--Normal Page-->
    <record id="id_page_normal" model="website.page">
        <field name="name">Normal Page</field>
        <field name="website_published">True</field>
        <field name="website_ids" eval="[(6, 0, [ref('website_base_multi_anz.theme_name')])]"/>
        <field name="url">/page/normal</field>
        <field name="view_id" ref="page_normal"/>
     </record>

    <!-- Normal Menu -->
    <record id="normal_menu" model="website.menu">
        <field name="name">Normal Menu</field>
        <field name="parent_id" ref="theme_name_main_menu"/>
        <field name="sequence" type="int">30</field>
        <field name="website_id" ref="website_base_multi_anz.theme_name"/>
        <field name="website_published">True</field>
    </record>

    <!-- ======================================= Page Blog ======================================= -->

    <!--Blog Menu-->
    <record id="menu_news" model="website.menu">
        <field name="name">Blog</field>
        <!--<field name="url" eval="'/blog/'+str(ref('website_blog.blog_blog_1'))"/>-->
        <field name="url">/blog</field>
        <field name="parent_id" ref="theme_name_main_menu"/>
        <field name="sequence" type="int">40</field>
        <field name="website_id" ref="website_base_multi_anz.theme_name"/>
    </record>

    <!-- ======================================= Page Newsletter ======================================= -->

    <!--Newsletter Template-->
    <template id="page_newsletter">
        <t t-call="website.layout">
            <div id="wrap">
                <div class="container"/>
            </div>
        </t>
    </template>

    <!-- Newsletter Page -->
    <record id="id_page_newsletter" model="website.page">
         <field name="name">Newsletter</field>
         <field name="website_ids" eval="[(6, 0, [ref('website_base_multi_anz.theme_name')])]"/>
         <field name="website_published">True</field>
         <field name="url">/page/page_newsletter</field>
         <field name="view_id" ref="page_newsletter"/>
     </record>

 </odoo>