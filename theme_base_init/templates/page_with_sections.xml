<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <template id="theme_name_page_with_sections" inherit_id="theme_bas.page_with_sections">
        <xpath expr="//div[@class='container']" position="inside">
            <section id="first_section">
                <!--Carousel-->
                <div id="carousel_with_sections" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#carousel_with_sections" data-slide-to="0" class="active"></li>
                        <li data-target="#carousel_with_sections" data-slide-to="1"></li>
                        <li data-target="#carousel_with_sections" data-slide-to="2"></li>
                    </ol>
                    <div class="carousel-inner" role="listbox">
                        <div class="item active">
                            <img class="img-responsive" src="/theme_base_init/static/img/theme_name/first_slide.svg" alt="First slide"/>
                            <div class="carousel-caption">
                                <h1>Título 1</h1>
                                <h3>Subtitulo 1</h3>
                            </div>
                        </div>
                        <div class="item">
                            <img class="img-responsive" src="/theme_base_init/static/img/theme_name/second_slide.svg" alt="Second slide"/>
                            <div class="carousel-caption">
                                <h1>Título 2</h1>
                                <h3>Subtitulo 2</h3>
                            </div>
                        </div>
                        <div class="item">
                            <img class="img-responsive" src="/theme_base_init/static/img/theme_name/third_slide.svg" alt="Third slide"/>
                            <div class="carousel-caption">
                                <h1>Título 3</h1>
                                <h3>Subtitulo 3</h3>
                            </div>
                        </div>
                    </div>
                    <!-- Controls -->
                    <a class="left carousel-control" href="#carousel_with_sections" role="button" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="right carousel-control" href="#carousel_with_sections" role="button" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>

                <h1>Cabecera 1</h1>
                <h2>Instructions 1</h2>
                <p>Parrafo 1</p>
            </section>

            <section id="second_section" class="mt32">
                <h1>Cabecera 2</h1>
                <h2>Instructions 2</h2>
                <p>Parrafo 2</p>
                <p>...</p>
                <p>...</p>
                <p>...</p>
            </section>
            <section id="third_section" class="mt32 mb32">
                <h1>Cabecera 3</h1>
                <h2>Instructions 3</h2>
                <p>Parrafo 3</p>
                <p>...</p>
                <p>...</p>
                <p>...</p>
            </section>
            <!-- Snippets' area -->
            <div class="oe_structure" />
        </xpath>
    </template>

</odoo>