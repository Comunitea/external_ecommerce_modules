<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <!-- Add custom styles -->
    <template id="theme_xxx_website_assets_frontend" inherit_id="website.assets_frontend">
        <xpath expr="link[last()]" position="after">
            <link href="/theme_base_init/static/css/_general.less" rel="stylesheet" type="text/less"/>
            <link href="/theme_base_init/static/css/header.less" rel="stylesheet" type="text/less"/>
            <link href="/theme_base_init/static/css/footer.less" rel="stylesheet" type="text/less"/>
        </xpath>
    </template>

    <!--Add custom scripts-->
    <template id="theme_xxx_website_assets_editor" inherit_id="website.assets_editor">
        <xpath expr="script[last()]" position="after">
            <script type="text/javascript" src="/theme_base_init/static/js/snippet.js" />
        </xpath>
    </template>

</odoo>