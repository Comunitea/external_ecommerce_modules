    </template>

    <template id="website_sale_product_price" inherit_id="website_sale.product_price" name="Product Price SEO Base">
        <!-- Hide price including with display none for google cannot show it -->
        <xpath expr="//h4[hasclass('css_non_editable_mode_hidden', 'decimal_precision')]" position="attributes">
            <attribute name="t-if">not product.hide_website_price</attribute>
        </xpath>
