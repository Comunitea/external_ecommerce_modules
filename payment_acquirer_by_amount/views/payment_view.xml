<?xml version="1.0"?>
<odoo>

    <record id="acquirer_form_by_amount" model="ir.ui.view">
        <field name="name">acquirer_form_by_amount</field>
        <field name="model">payment.acquirer</field>
        <field name="inherit_id" ref="payment.acquirer_form" />
        <field name="arch" type="xml">
            <notebook position="inside">
                <page string="Conditions">
                    <group>
                        <field name="min_amount_required"/>
                        <field name="max_amount_required"/>
                    </group>
                </page>
            </notebook>
        </field>
    </record>

</odoo>
