<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="payment_acquirer_cash" model="payment.acquirer">
            <field name="name">Cash On Delivery</field>
            <field name="image" type="base64" file="payment_cash_on_delivery/static/img/cashOnDelivery.png"/>
            <field name="provider">cash</field>
            <field name="company_id" ref="base.main_company"/>
            <field name="view_template_id" ref="cash_acquirer_button"/>
            <field name="auto_confirm">confirm_so</field>
            <field name="environment">test</field>
            <field name="website_published" eval="False"/>
            <field name="pre_msg">
                <![CDATA[<p>Cash On Delivery information will be provided after choosing the payment method.</p>]]>
            </field>
            <field name="description" type="html">
                <p>A payment gateway to accept online payments via Cash On Delivery.</p>
                <ul>
                    <li><i class="fa fa-check"/>eCommerce</li>
                </ul>
            </field>
        </record>

    </data>
</odoo>
