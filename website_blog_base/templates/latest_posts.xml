<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <template id="wbb_latest_post">
        <div t-attf-class="col-md-#{col_md} col-sm-6 col-xs-12 mb16">
            <div class="mr16 latest_posts-post">
                <h3 t-esc="post.name"/>
                <a t-attf-href="/blog/#{slug(post.blog_id)}/post/#{slug(post)}" title="Read more..." t-if="post.image">
                    <div class="mb8" t-attf-style="background: url(/web/image/blog.post/#{post.id}/image/500x500) center / cover; width: 100%; height: 200px;"/>
                </a>
                <div>
                    <p t-esc="post.introduction"/>
                </div>
                <a href="slug(post)" title="Read more..." class="btn btn-primary">Read more <i class="fa fa-long-arrow-right"/></a>
            </div>
        </div>
    </template>

</odoo>