<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <!-- Custom Assets -->
    <template id="website_assets_frontend" name="Website Assets Ecommerce Base" inherit_id="website.assets_frontend">
        <!-- CSS -->
        <xpath expr="link[last()]" position="after">
            <!-- Mixins -->
            <link href="/ecommerce_base/static/css/mixins/background-variant.less" rel="stylesheet" type="text/less"/>
            <!-- CSS -->
            <link href="/ecommerce_base/static/css/variables.less" rel="stylesheet" type="text/less"/>
            <link href="/ecommerce_base/static/css/contactus.less" rel="stylesheet" type="text/less"/>
            <link href="/ecommerce_base/static/css/cookies.less" rel="stylesheet" type="text/less"/>
            <link href="/ecommerce_base/static/css/type.less" rel="stylesheet" type="text/less"/>
        </xpath>
        <!-- Scripts -->
        <xpath expr="//script[last()]" position="after">
            <script src="/ecommerce_base/static/js/jquery.validate.min.js" type="text/javascript"/>
            <script src="/ecommerce_base/static/js/main.js" type="text/javascript"/>
        </xpath>
    </template>

