<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record model="ir.actions.act_window" id="checkout_coupon_history_list">
        <field name="name">Coupon usage history</field>
        <field name="res_model">checkout_coupon.history</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.ui.view" id="checkout_coupon_history_list_tree">
        <field name="name">Coupon usage history tree</field>
        <field name="model">checkout_coupon.history</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="code"/>
                <field name="order"/>
                <field name="partner"/>
                <field name="date"/>
                <field name="cart_total" widget="monetary"/>
                <field name="currency_id" invisible="1"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="checkout_coupon_history_list_form">
        <field name="name">Coupon usage history item form</field>
        <field name="model">checkout_coupon.history</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group colspan="4" col="4">
                        <group colspan="2" col="2">
                            <separator string="Coupon information" colspan="2"/>
                            <field name="name"/>
                            <field name="code"/>
                        </group>
                        <group colspan="2" col="2">
                            <separator string="Order information" colspan="2"/>
                            <field name="order"/>
                            <field name="partner"/>
                            <field name="date"/>
                            <field name="cart_total" widget="monetary"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>