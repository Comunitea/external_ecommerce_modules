<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <!-- Add custom assets -->
    <template id="website_assets_frontend" inherit_id="website.assets_frontend" name="Website Frontend Assets Affix Top Menu">
        <xpath expr="link[last()]" position="after">
            <link href="/website_sale_affix_header/static/css/header.less" rel="stylesheet" type="text/less"/>
        </xpath>
    </template>

    <!-- Add scripts on footer by lazy load -->
    <template id="website_layout" inherit_id="website.layout" name="Main layout Scroll Assets Affix Top Menu">
        <xpath expr="//footer" position="after">
            <script src="/website_sale_affix_header/static/js/scroll.js" type="text/javascript"/>
        </xpath>
    </template>

</odoo>