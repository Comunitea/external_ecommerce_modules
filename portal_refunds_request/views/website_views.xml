<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- website views -->
        <record id="view_website_form_refunds_contact" model="ir.ui.view">
            <field name="name">view.website.form.refunds.contact</field>
            <field name="model">website</field>
            <field name="inherit_id" ref="website.view_website_form"/>
            <field name="arch" type="xml">
                <group name="domain" position="after">
                    <div name="refunds">
                        <separator name="refunds" string="Refunds"/>
                        <group name="refunds">
                            <field name="refunds_contact"/>
                        </group>
                    </div>
                </group>
            </field>
        </record>

    </data>
</odoo>