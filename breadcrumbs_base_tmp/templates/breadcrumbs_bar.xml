<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <!-- Add breadcrumb bar to the main frontend layout -->
    <template id="portal_frontend_layout" name="Breadcrumbs Bar" inherit_id="portal.frontend_layout" active="True" customize_show="True">
        <xpath expr="//main/t" position="before">
            <t t-call="breadcrumbs_base.breadcrumbs_bar" t-if="'home' not in xmlid and 'portal' not in xmlid"/>
        </xpath>
    </template>

    <!-- Remove the product breadcrumb's bar -->
    <template id="website_sale_product" name="Product Breadcrumbs Base Tmp" inherit_id="website_sale.product">
        <!-- Replace breadcrumbs, search, pricelist and pager -->
        <xpath expr="//div[hasclass('row')]" position="replace"/>
        <!-- Add search, pricelist and pager without breadcrumbs -->
        <xpath expr="//div[@id='wrap']//section" position="before">
            <div class="products_pager form-inline justify-content-center mb32">
                <t t-call="website_sale.search">
                    <t t-set="_classes">o_website_sale_search</t>
                </t>
                <t t-call="website_sale.pricelist_list">
                    <t t-set="_classes">ml-2</t>
                </t>
                <t t-call="website.pager" t-if="'website_sale.product' not in xmlid">
                    <t t-set="_classes">ml-2</t>
                </t>
            </div>
        </xpath>
    </template>

