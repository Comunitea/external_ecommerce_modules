<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <!-- Add breadcrumb bar to the main frontend layout -->
    <template id="portal_frontend_layout" name="Main Frontend Layout Breadcrumbs Base Tmp" inherit_id="portal.frontend_layout">
        <xpath expr="//main/t" position="before">
            <t t-call="breadcrumbs_base.breadcrumbs_bar" t-if="'home' not in xmlid"/>
        </xpath>
    </template>

    <!-- Remove the product breadcrumb's bar -->
    <template id="website_sale_product" name="Product Breadcrumbs Base Tmp" inherit_id="website_sale.product">
        <xpath expr="//ol[hasclass('breadcrumb')]" position="attributes">
            <attribute name="t-if">True == False</attribute>
        </xpath>
    </template>

    <!-- Remove the My Account breadcrumb's bar -->
    <template id="portal_portal_layout" name="Portal Layout Breadcrumbs Base Tmp" inherit_id="portal.portal_layout">
        <xpath expr="//div[hasclass('o_portal')]" position="attributes">
            <attribute name="t-if">True == False</attribute>
        </xpath>
    </template>

</odoo>